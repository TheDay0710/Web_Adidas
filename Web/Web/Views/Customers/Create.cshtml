@model Web.Customer

@{
    ViewBag.Title = "ĐĂNG KÝ TÀI KHOẢN";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .adidas-form-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 40px;
        background: #fff;
    }

    .adidas-title {
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 32px;
        margin-bottom: 30px;
        letter-spacing: 1px;
    }

    .adidas-label {
        font-weight: bold;
        font-size: 13px;
        text-transform: uppercase;
        margin-bottom: 8px;
        display: block;
        letter-spacing: 0.5px;
    }

    .adidas-input {
        width: 100%;
        padding: 15px;
        border: 1px solid #767677;
        border-radius: 0;
        margin-bottom: 20px;
        font-size: 16px;
        outline: none;
    }

        .adidas-input:focus {
            border-color: #000;
            box-shadow: 0 0 0 1px #000 inset;
        }

    .btn-adidas-submit {
        background-color: #000;
        color: #fff;
        font-family: 'Oswald', sans-serif;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 16px;
        letter-spacing: 2px;
        width: 100%;
        padding: 15px;
        border: none;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
        transition: 0.3s;
    }

        .btn-adidas-submit:hover {
            background-color: #333;
        }

    .login-link {
        margin-top: 20px;
        display: block;
        font-size: 14px;
        text-decoration: underline;
        color: #000;
        font-weight: bold;
    }
</style>

<div class="adidas-form-container">
    <h2 class="adidas-title">ĐĂNG KÝ</h2>
    <p class="mb-4">Trở thành thành viên để không bỏ lỡ các ưu đãi.</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mb-3">@ViewBag.Error</div>
        }

        <label class="adidas-label">HỌ VÀ TÊN *</label>
        @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "adidas-input", @required = "required" } })

        <label class="adidas-label">SỐ ĐIỆN THOẠI</label>
        @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "adidas-input" } })

        <label class="adidas-label">TÊN ĐĂNG NHẬP *</label>
        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "adidas-input", @required = "required", @placeholder = "Viết liền không dấu" } })
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

        <label class="adidas-label">MẬT KHẨU *</label>
        <input type="password" name="Password" class="adidas-input" placeholder="Ít nhất 6 ký tự" required />
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

        <button type="submit" class="btn-adidas-submit">
            TẠO TÀI KHOẢN <i class="fas fa-arrow-right"></i>
        </button>
    }

    <div class="text-center">
        <a href="@Url.Action("Login", "Customers")" class="login-link">BẠN ĐÃ CÓ TÀI KHOẢN? ĐĂNG NHẬP</a>
    </div>
</div>