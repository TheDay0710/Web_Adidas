<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cửa hàng trực tuyến chính thức của adidas Việt Nam</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@500;700&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #000;
            margin: 0; padding: 0;
        }

        a { text-decoration: none; color: #000; transition: 0.2s; }
        ul { list-style: none; padding: 0; margin: 0; }


        .top-black-bar {
            background-color: #000;
            color: #fff;
            font-size: 11px;
            text-align: center;

            height: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            overflow: hidden;
            position: relative;
            cursor: pointer;
        }


        .slide-text {
            display: none;
            animation: slideUp 0.5s ease-out;
        }


        .slide-text.active {
            display: block;
        }


        @@keyframes slideUp {
            from { transform: translateY(20px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }

        .navbar-adidas {
            background: #fff;
            height: 80px;
            border-bottom: 1px solid #eee;
            padding: 0 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .adidas-logo { width: 50px; cursor: pointer; }

        .menu-center a {
            font-family: 'Oswald', sans-serif;
            font-weight: 700;
            font-size: 14px;
            margin: 0 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .menu-center a:hover { text-decoration: underline; text-underline-offset: 5px; }

        .icons-right i { font-size: 20px; margin-left: 20px; cursor: pointer; }

        .info-section-black {
            background-color: #000;
            color: #fff;
            padding: 60px 20px;
            text-align: center;
        }

        .info-title {
            font-family: 'Oswald', sans-serif;
            font-size: 28px;
            text-transform: uppercase;
            font-weight: 700;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .info-content {
            max-width: 1000px;
            margin: 0 auto;
            text-align: left;
            font-size: 14px;
            line-height: 1.6;
            color: #ececec;
        }

        .info-content p { margin-bottom: 20px; }

        .bottom-logo { width: 40px; filter: invert(1); margin-top: 30px; }

        .member-banner {
            background-color: #006553;
            padding: 40px 0;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
        }

        .member-text {
            font-family: 'Oswald', sans-serif;
            font-size: 30px;
            font-weight: 700;
            margin-right: 30px;
            text-transform: uppercase;
        }

        .btn-member {
            background: #fff; color: #000; padding: 15px 25px;
            font-weight: bold; text-transform: uppercase; border: none;
            font-family: 'Oswald', sans-serif; letter-spacing: 1px; display: flex; align-items: center;
        }

        .btn-member:after { content: '→'; margin-left: 10px; font-size: 20px; }

        footer {
            background-color: #000;
            color: #fff;
            padding-top: 50px;
            padding-bottom: 20px;
        }

        .footer-col h5 {
            font-family: 'Oswald', sans-serif; font-size: 18px; margin-bottom: 20px; text-transform: uppercase;
        }

        .footer-col ul li { margin-bottom: 10px; }
        .footer-col ul li a { color: #d3d3d3; font-size: 13px; }
        .footer-col ul li a:hover { text-decoration: underline; color: #fff; }

        .bottom-copyright {
            border-top: 1px solid #333; margin-top: 40px; padding-top: 20px;
            text-align: center; font-size: 12px; color: #888;
        }
        .bottom-copyright span { margin: 0 10px; }
        .far fa-user{}
    </style>
</head>
<body>

