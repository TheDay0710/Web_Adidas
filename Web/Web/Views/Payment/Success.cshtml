@model Web.OrderPro

@{
    ViewBag.Title = "ĐẶT HÀNG THÀNH CÔNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    
    .adidas-font {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }

    
    .success-icon-box {
        width: 80px;
        height: 80px;
        background-color: #006553; 
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px auto;
    }

        .success-icon-box i {
            color: #fff;
            font-size: 40px;
        }

    
    .order-info-box {
        border: 1px solid #000;
        padding: 30px;
        margin-top: 30px;
        text-align: left;
    }

 
    .btn-adidas-black {
        background-color: #000;
        color: #fff;
        padding: 15px 40px;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 2px;
        border: none;
        cursor: pointer;
        display: inline-block;
        text-decoration: none;
        margin-top: 30px;
        transition: 0.3s;
    }

        .btn-adidas-black:hover {
            background-color: #333;
            color: #fff;
        }

        .btn-adidas-black:after {
            content: '→';
            margin-left: 10px;
            font-size: 20px;
        }
</style>

<div class="container text-center py-5" style="max-width: 700px;">

    <div class="success-icon-box">
        <i class="fas fa-check"></i>
    </div>

    <h1 class="adidas-font mb-3" style="font-size: 36px;">CẢM ƠN BẠN ĐÃ ĐẶT HÀNG!</h1>
    <p class="text-muted" style="font-size: 16px;">
        Đơn hàng của bạn đã được tiếp nhận và đang trong quá trình xử lý.
        Chúng tôi sẽ gửi email xác nhận đến bạn sớm nhất.
    </p>

    @if (Model != null)
    {
        <div class="order-info-box">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <span class="d-block text-muted text-uppercase" style="font-size: 12px; font-weight: bold;">Mã đơn hàng</span>
                    <span class="adidas-font" style="font-size: 24px;">#@Model.ID</span>
                </div>
                <div class="col-md-6">
                    <span class="d-block text-muted text-uppercase" style="font-size: 12px; font-weight: bold;">Ngày đặt</span>
                    <span class="fw-bold">@Model.DateOrder.Value.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
            <hr>
            <div class="row mt-3">
                <div class="col-12">
                    <span class="d-block text-muted text-uppercase" style="font-size: 12px; font-weight: bold;">Địa chỉ giao hàng</span>
                    <span class="fw-bold">@Model.AddressDeliverry</span>
                </div>
            </div>
        </div>
    }

    <a href="@Url.Action("Index", "Product")" class="btn-adidas-black">
        TIẾP TỤC MUA SẮM
    </a>

    <div class="mt-4">
        <a href="@Url.Action("Index", "Order")" style="text-decoration: underline; color: #000; font-weight: bold; font-size: 13px;">
            THEO DÕI ĐƠN HÀNG CỦA TÔI
        </a>
    </div>
</div>