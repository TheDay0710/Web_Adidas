@using Web
@{
    ViewBag.Title = "GIỎ HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .adidas-font {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .btn-black {
        background: #000;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        text-decoration: none;
        display: inline-block;
    }

        .btn-black:hover {
            background: #333;
            color: #fff;
        }

    .cart-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border: 1px solid #eee;
    }

    .qty-input {
        width: 50px;
        text-align: center;
        border: 1px solid #000;
        padding: 5px;
        font-weight: bold;
    }
</style>

<div class="container py-5" style="min-height: 600px;">
    <h2 class="adidas-font mb-4">GIỎ HÀNG CỦA BẠN</h2>

    @if (Session["Cart"] != null && ((List<CartItem>)Session["Cart"]).Count > 0)
    {
        var cart = (List<CartItem>)Session["Cart"];
        double total = cart.Sum(item => (double)item._shopping_product.Price * item._shopping_quantity);

        <div class="row">
            <div class="col-lg-8">
                <table class="table">
                    <thead class="bg-light">
                        <tr>
                            <th>SẢN PHẨM</th>
                            <th>GIÁ</th>
                            <th>SỐ LƯỢNG</th>
                            <th>THÀNH TIỀN</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in cart)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex">
                                        <img src="~/Content/images/@item._shopping_product.ImagePro" class="cart-img me-3">
                                        <div>
                                            <strong class="text-uppercase">@item._shopping_product.NamePro</strong><br>
                                            <small class="text-muted">ID: @item._shopping_product.ProductID</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">@string.Format("{0:N0} ₫", item._shopping_product.Price)</td>
                                <td class="align-middle">
                                    @using (Html.BeginForm("UpdateCart", "Cart", new { id = item._shopping_product.ProductID }))
                                    {
                                        <input type="number" name="Quantity" value="@item._shopping_quantity" min="1" class="qty-input" onchange="this.form.submit()" />
                                    }
                                </td>
                                <td class="align-middle fw-bold">
                                    @string.Format("{0:N0} ₫", item._shopping_product.Price * item._shopping_quantity)
                                </td>
                                <td class="align-middle">
                                    <a href="@Url.Action("RemoveCart", "Cart", new { id = item._shopping_product.ProductID })" class="text-danger fw-bold">X</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-lg-4">
                <div class="border p-4">
                    <h4 class="adidas-font mb-3">TÓM TẮT</h4>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính</span>
                        <span>@string.Format("{0:N0} ₫", total)</span>
                    </div>
                    <div class="d-flex justify-content-between mb-4">
                        <span>Giao hàng</span>
                        <span>Miễn phí</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4 fw-bold fs-5">
                        <span>TỔNG CỘNG</span>
                        <span>@string.Format("{0:N0} ₫", total)</span>
                    </div>

                    <a href="@Url.Action("Index", "Payment")" class="btn-black w-100 text-center">
                        THANH TOÁN NGAY <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center mt-5">
            <h4 class="adidas-font">GIỎ HÀNG TRỐNG</h4>
            <p class="text-muted">Bạn chưa chọn sản phẩm nào.</p>

            <a href="@Url.Action("Index", "Products")" class="btn-black mt-3">MUA SẮM NGAY</a>
        </div>
    }
</div>