@model Web.OrderPro

@{
    ViewBag.Title = "XÓA ĐƠN HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .warning-box {
        border: 2px solid #000;
        padding: 40px;
        text-align: center;
    }

    .btn-adidas-delete {
        background-color: #000;
        color: #fff;
        padding: 15px 40px;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
        border: none;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn-adidas-delete:hover {
            background-color: #e60000;
            color: #fff;
        }
   

    .info-summary {
        text-align: left;
        margin: 30px auto;
        max-width: 400px;
        border: 1px solid #eee;
        padding: 20px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="warning-box">
                <h2 class="font-adidas mb-3">BẠN MUỐN XÓA ĐƠN HÀNG NÀY?</h2>
                <p class="mb-0">Hành động này không thể hoàn tác. Đơn hàng và các sản phẩm bên trong sẽ bị xóa vĩnh viễn.</p>

                <div class="info-summary">
                    <p class="mb-1"><strong>MÃ ĐƠN:</strong> #@Model.ID</p>
                    <p class="mb-1"><strong>KHÁCH HÀNG:</strong> @(Model.Customer != null ? Model.Customer.NameCus : "N/A")</p>
                    <p class="mb-1"><strong>NGÀY:</strong> @(Model.DateOrder.HasValue ? Model.DateOrder.Value.ToString("dd/MM/yyyy") : "")</p>
                    <p class="mb-0"><strong>ĐỊA CHỈ:</strong> @Model.AddressDeliverry</p>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <button type="submit" class="btn-adidas-delete">XÓA NGAY</button>
                    <div class="mt-3">
                        <a href="@Url.Action("Index")" style="text-decoration: underline; color: #000; font-weight: bold; text-transform: uppercase;">KHÔNG, QUAY LẠI</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>