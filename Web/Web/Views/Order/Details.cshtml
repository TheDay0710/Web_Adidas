@model Web.OrderPro

@{
    ViewBag.Title = "CHI TIẾT ĐƠN HÀNG";
    Layout = "~/Views/Shared/_Layout.cshtml";

    double grandTotal = 0;
    if (Model.OrderDetails != null)
    {
        grandTotal = Model.OrderDetails.Sum(item =>
            (item.Quantity.GetValueOrDefault(0) * item.UnitPrice.GetValueOrDefault(0)));
    }
}

<style>
    .adidas-card {
        border: 1px solid #e9ecef;
        border-radius: 0;
    }

    .adidas-header {
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 20px;
    }

    .btn-adidas-black {
        background-color: #000;
        color: #fff;
        padding: 10px 30px;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
        border: 1px solid #000;
        border-radius: 0;
        transition: 0.3s;
        display: inline-flex;
        align-items: center;
    }

        .btn-adidas-black:hover {
            background-color: #333;
            color: #fff;
            text-decoration: none;
        }

        .btn-adidas-black:after {
            content: '→';
            margin-left: 10px;
            font-size: 18px;
        }

    .btn-adidas-white {
        background-color: #fff;
        color: #000;
        padding: 10px 20px;
        font-family: 'Oswald', sans-serif;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
        border: 1px solid #000;
        border-radius: 0;
    }

        .btn-adidas-white:hover {
            background-color: #000;
            color: #fff;
        }

    .info-label {
        font-weight: bold;
        text-transform: uppercase;
        font-size: 12px;
        color: #767677;
    }

    .info-value {
        font-weight: bold;
        font-size: 16px;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="adidas-header mb-0" style="font-size: 32px;">ĐƠN HÀNG #@Model.ID</h2>
            <p class="text-muted mb-0">Ngày đặt: @(Model.DateOrder.HasValue ? Model.DateOrder.Value.ToString("dd/MM/yyyy") : "N/A")</p>
        </div>
        <a href="@Url.Action("Index")" class="btn-adidas-white">QUAY LẠI DANH SÁCH</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="adidas-card p-4 mb-4">
                <h4 class="adidas-header">SẢN PHẨM (@(Model.OrderDetails != null ? Model.OrderDetails.Count : 0))</h4>

                @foreach (var item in Model.OrderDetails)
                {
                    double price = item.UnitPrice.GetValueOrDefault(0);
                    int qty = item.Quantity.GetValueOrDefault(0);

                    <div class="d-flex py-3 border-bottom">
                        <img src="~/Content/images/@item.Product.ImagePro" style="width: 100px; height: 100px; object-fit: cover; margin-right: 20px;" alt="Img">
                        <div class="w-100">
                            <div class="d-flex justify-content-between">
                                <h5 class="fw-bold text-uppercase">@item.Product.NamePro</h5>
                                <span class="fw-bold">@string.Format("{0:N0} ₫", price * qty)</span>
                            </div>
                            <p class="mb-1 text-muted">Mã SP: @item.Product.ProductID</p>
                            <p class="mb-1">Số lượng: <strong>@qty</strong></p>
                            <p class="mb-0">Đơn giá: @string.Format("{0:N0} ₫", price)</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-4">
            <div class="adidas-card p-4 mb-4" style="border: 2px solid #000;">
                <h4 class="adidas-header">TÓM TẮT ĐƠN HÀNG</h4>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tạm tính</span>
                    <span>@string.Format("{0:N0} ₫", grandTotal)</span>
                </div>
                <div class="d-flex justify-content-between mb-3">
                    <span>Giao hàng</span>
                    <span>Miễn phí</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between mt-3">
                    <strong class="text-uppercase">TỔNG CỘNG</strong>
                    <strong style="font-size: 20px;">@string.Format("{0:N0} ₫", grandTotal)</strong>
                </div>
            </div>

            <div class="adidas-card p-4">
                <h5 class="adidas-header mb-4">THÔNG TIN VẬN CHUYỂN</h5>

                <div class="mb-3">
                    <div class="info-label">KHÁCH HÀNG</div>
                    <div class="info-value">@(Model.Customer != null ? Model.Customer.NameCus : "Khách lẻ")</div>
                </div>

                <div class="mb-3">
                    <div class="info-label">ĐỊA CHỈ GIAO HÀNG</div>
                    <div class="info-value">@Model.AddressDeliverry</div>
                </div>
            </div>
        </div>
    </div>
</div>